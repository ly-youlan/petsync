<!--pages/devTools/devTools.wxml-->
<view class="container">
  <view class="header">
    <view class="title">开发工具</view>
    <view class="subtitle">仅用于开发环境测试</view>
  </view>
  
  <view class="card" wx:if="{{userInfo}}">
    <view class="card-title">用户信息</view>
    <view class="info-item">
      <text class="label">手机号:</text>
      <text class="value">{{userInfo.phoneNumber}}</text>
    </view>
    <view class="info-item">
      <text class="label">医院名称:</text>
      <text class="value">{{userInfo.hospitalName || '未设置'}}</text>
    </view>
    <view class="info-item">
      <text class="label">审核状态:</text>
      <text class="value status {{isApproved ? 'approved' : 'pending'}}">
        {{isApproved ? '已审核' : '待审核'}}
      </text>
    </view>
    
    <button class="btn-toggle" bindtap="toggleApproval">
      {{isApproved ? '取消审核' : '通过审核'}}
    </button>
  </view>
  
  <view class="card danger-zone">
    <view class="card-title">危险操作</view>
    <button class="btn-danger" bindtap="clearStorage">清除所有本地数据</button>
  </view>
  
  <button class="btn-back" bindtap="navigateBack">返回</button>
</view>
