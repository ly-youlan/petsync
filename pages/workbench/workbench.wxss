/* pages/workbench/workbench.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: var(--background-color);
  box-sizing: border-box;
}

/* 顶部容器 */
.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
}

/* 医院信息区域 */
.hospital-info {
  background-color: white;
  padding: 0 24rpx;
  border-radius: 12rpx;
  flex: 1;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  display: flex;
  align-items: center;
  margin-right: 16rpx;
  height: 150rpx;
}

.hospital-info mp-icon {
  margin-right: 16rpx;
}

.hospital-text {
  flex: 1;
  overflow: hidden;
}

/* 设置按钮 */
.settings-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  width: 90rpx;
  height: 150rpx; 
  box-sizing: border-box;
}

.settings-btn text {
  font-size: 22rpx;
  color: var(--text-light-color);
  margin-top: 6rpx;
}

.hospital-name {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 10rpx;
}

.vet-name {
  font-size: 28rpx;
  color: var(--text-light-color);
}

/* 头部筛选和搜索区域 */
.header {
  margin-bottom: 20rpx;
  width: 100%;
}

.filters {
  display: flex;
  margin-top: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.filter {
  padding: 10rpx 30rpx;
  background-color: #FFF5E6; /* 淡暖色背景 */
  border-radius: 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #A67C52; /* 暖色文字 */
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.filter.active {
  background-color: #D4B59E; /* 淡暖色高亮 */
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(212, 181, 158, 0.3);
}

.add-filter {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e0e0e0;
  font-weight: bold;
}

.search-box {
  position: relative;
  width: 100%;
  margin-bottom: 20rpx;
}

.search-box input {
  background-color: white;
  padding: 24rpx 60rpx 24rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.search-icon image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}
.header input {
  border: 1rpx solid var(--primary-color);
  padding: 10rpx;
  border-radius: 10rpx;
}
.function-list {
  display: flex;
  flex-direction: column;
}
.function-list .btn {
  margin-bottom: 20rpx;
}

/* 宠物标签样式 */
.pet-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 12rpx;
  margin-bottom: 8rpx;
}

.pet-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.tag-hospitalized {
  background-color: rgba(76, 175, 80, 0.15); /* 淡绿色 */
  color: #4CAF50;
  border: 1rpx solid rgba(76, 175, 80, 0.3);
}

.tag-postop {
  background-color: rgba(255, 87, 34, 0.15); /* 淡橙色 */
  color: #FF5722;
  border: 1rpx solid rgba(255, 87, 34, 0.3);
}

.tag-other {
  background-color: rgba(33, 150, 243, 0.15); /* 淡蓝色 */
  color: #2196F3;
  border: 1rpx solid rgba(33, 150, 243, 0.3);
}

/* 自定义图标样式 */
.custom-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: bold;
}

.info-icon {
  background-color: #FFF5E6;
  color: #8B5A2B;
  font-style: italic;
}

.setting-icon {
  color: #A67C52;
  font-size: 32rpx;
}

.search-icon {
  color: #D4B59E;
  font-size: 32rpx;
}

.add-icon {
  color: #FFFFFF;
  font-size: 32rpx;
}

.more-icon {
  color: #D4B59E;
  font-size: 24rpx;
}

.warn-icon {
  background-color: #FFF5E6;
  color: #D4B59E;
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
}

/* 创建按钮 */
.create-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--primary-color);
  color: white;
  padding: 10rpx;
  border-radius: 12rpx;
  margin: 0 20rpx 20rpx 20rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(212, 181, 158, 0.3);
  transition: all 0.3s ease;
  width: calc(100% - 0rpx);
  box-sizing: border-box;
}

.create-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.create-btn mp-icon {
  margin-right: 12rpx;
}

/* 宠物卡片样式 */
.pet-records {
  margin-top: 30rpx;
}

.pet-card {
  display: flex;
  background-color: white;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.pet-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.pet-image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 24rpx;
  border-radius: 70rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 3rpx solid #FFF5E6;
}

.pet-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.default-pet-icon {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFF5E6;
}

.pet-icon {
  font-size: 70rpx;
  color: #A67C52;
}

.pet-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pet-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.pet-name {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
}

.pet-time {
  font-size: 24rpx;
  color: #999;
  background-color: #F8F8F8;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.pet-owner {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.owner-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
  background-color: #FFF5E6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.owner-phone {
  font-weight: 500;
}

.arrow {
  display: flex;
  align-items: center;
  color: #D4B59E;
  font-size: 24rpx;
}

.pet-status mp-icon {
  margin-right: 6rpx;
}

.status-hospitalized {
  background-color: var(--error-color);
}

.status-postop {
  background-color: var(--success-color);
}

.pet-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.pet-time mp-icon {
  margin-right: 6rpx;
}

.pet-owner {
  width: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.owner-label {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-light-color);
  margin-bottom: 12rpx;
}

.owner-label mp-icon {
  margin-right: 6rpx;
}

.owner-phone {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--text-color);
}

.owner-phone mp-icon {
  margin-right: 6rpx;
}

.arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 10rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: var(--text-light-color);
  text-align: center;
}

/* 待审核状态 */
.pending-approval {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 30rpx;
  height: 100%;
}

.pending-icon {
  margin-bottom: 40rpx;
}

.pending-title {
  font-size: 38rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 20rpx;
}

.pending-text {
  font-size: 30rpx;
  color: var(--text-light-color);
  margin-bottom: 50rpx;
  text-align: center;
}

.clinic-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  width: 100%;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  margin-bottom: 50rpx;
}

.clinic-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 30rpx;
  text-align: center;
  position: relative;
}

.clinic-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

.clinic-item {
  display: flex;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.item-label {
  width: 180rpx;
  font-size: 28rpx;
  color: var(--text-light-color);
  font-weight: 500;
}

.item-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.pending-subtext {
  font-size: 26rpx;
  color: var(--text-light-color);
  text-align: center;
  line-height: 1.6;
  padding: 0 30rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--primary-color);
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-light-color);
}
