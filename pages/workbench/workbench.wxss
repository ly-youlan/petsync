/* pages/workbench/workbench.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: var(--background-color);
  box-sizing: border-box;
}

/* 顶部容器 */
.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
}

/* 医院信息区域 */
.hospital-info {
  background-color: white;
  padding: 0 24rpx;
  border-radius: 12rpx;
  flex: 1;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  display: flex;
  align-items: center;
  margin-right: 16rpx;
  height: 150rpx;
}

.hospital-info mp-icon {
  margin-right: 16rpx;
}

.hospital-info mp-icon.arrow {
  margin-left: 16rpx;
  display: flex;
  height: 140rpx;
  align-items: center;
}

.hospital-text {
  flex: 1;
  overflow: hidden;
}

/* 设置按钮 */
.settings-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  width: 90rpx;
  height: 150rpx; 
  box-sizing: border-box;
}

.settings-btn text {
  font-size: 22rpx;
  color: var(--text-light-color);
  margin-top: 6rpx;
}

.hospital-name {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 10rpx;
}

.vet-name {
  font-size: 28rpx;
  color: var(--text-light-color);
}

/* 头部筛选和搜索区域 */
.header {
  margin-bottom: 20rpx;
  width: 100%;
}

.filters {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 4rpx;
}

.filter {
  padding: 12rpx 24rpx;
  background-color: #F5F5F5;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s ease;
  border: 1rpx solid transparent;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.filter:active {
  transform: scale(1.05);
}

.filter.active {
  background-color: var(--primary-color);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(212, 181, 158, 0.3);
}

.add-filter {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fef7e8;
  color: #f4ad42;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 8rpx rgba(244, 137, 66, 0.2);
  border: 1rpx solid rgba(244, 173, 66, 0.1);
}

.search-box {
  position: relative;
  width: 100%;
  margin-bottom: 24rpx;
}

.search-box input {
  background-color: white;
  padding: 24rpx 60rpx 24rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  height: 90rpx;
  border: 1rpx solid rgba(212, 181, 158, 0.2);
  transition: all 0.3s ease;
  color: #333;
}

.search-box input:focus {
  box-shadow: 0 4rpx 16rpx rgba(212, 181, 158, 0.2);
  border-color: rgba(212, 181, 158, 0.3);
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.search-icon image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.function-list {
  display: flex;
  flex-direction: column;
}
.function-list .btn {
  margin-bottom: 20rpx;
}

/* 宠物标签样式 */
.pet-tags {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.pet-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  margin-bottom: 4rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
  transition: all 0.2s ease;
  white-space: nowrap;
}

.tag-hospitalized {
  background-color: rgba(212, 181, 158, 0.15); /* 淡暖色 */
  color: #A67C52;
  border: 1rpx solid rgba(212, 181, 158, 0.3);
}

.tag-postop {
  background-color: rgba(255, 152, 0, 0.15); /* 淡橙色 */
  color: #FF9800;
  border: 1rpx solid rgba(255, 152, 0, 0.3);
}

.tag-other {
  background-color: rgba(156, 39, 176, 0.15); /* 淡紫色 */
  color: #9C27B0;
  border: 1rpx solid rgba(156, 39, 176, 0.3);
}

/* 自定义图标样式 */
.custom-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: bold;
}

.info-icon {
  background-color: #FFF5E6;
  color: #8B5A2B;
  font-style: italic;
}

.setting-icon {
  color: #A67C52;
  font-size: 32rpx;
}

.search-icon {
  color: #D4B59E;
  font-size: 32rpx;
}

.add-icon {
  color: #FFFFFF;
  font-size: 32rpx;
}

.more-icon {
  color: #D4B59E;
  font-size: 24rpx;
}

.warn-icon {
  background-color: #FFF5E6;
  color: #D4B59E;
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
}

/* 功能按钮区域 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

/* 创建按钮 */
.create-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, var(--primary-color), #D4B59E);
  color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(212, 181, 158, 0.3);
  transition: all 0.3s ease;
  flex: 1;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  letter-spacing: 2rpx;
}

/* 医护管理按钮 */
.staff-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #8B5A2B, #A67C52);
  color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(166, 124, 82, 0.3);
  transition: all 0.3s ease;
  flex: 1;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  letter-spacing: 2rpx;
}

/* 测试工具按钮 */
.test-tools-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #5A8B8B, #52A6A6);
  color: white;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(82, 166, 166, 0.3);
  transition: all 0.3s ease;
  margin: 20rpx 0;
  position: relative;
  overflow: hidden;
  letter-spacing: 2rpx;
}

.tools-icon {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  margin-right: 10rpx;
  font-size: 28rpx;
}

.staff-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(255,255,255,0.1), rgba(255,255,255,0.2), rgba(255,255,255,0.1));
  transform: translateX(-100%);
  transition: transform 0.5s;
}

.staff-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(166, 124, 82, 0.2);
}

.staff-btn:active::after {
  transform: translateX(100%);
}

.create-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(255,255,255,0.1), rgba(255,255,255,0.2), rgba(255,255,255,0.1));
  transform: translateX(-100%);
  transition: transform 0.5s;
}

.create-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(212, 181, 158, 0.2);
}

.create-btn:active::after {
  transform: translateX(100%);
}

.create-btn mp-icon {
  margin-right: 12rpx;
}

/* 宠物卡片样式 */
.pet-records {
  margin-top: 30rpx;
  width: 100%;
}

.time-row {
  margin-top: 4rpx;
}

.pet-card {
  display: flex;
  background-color: white;
  padding: 24rpx 30rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(0, 0, 0, 0.03);
  position: relative;
  overflow: hidden;
  align-items: flex-start;
}

.pet-card::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background-color: var(--primary-color);
  opacity: 0.7;
}

.pet-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.pet-image {
  width: 140rpx;
  height: 140rpx;
  min-width: 140rpx;
  margin-right: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #FFF5E6;
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
  background-color: #FFF5E6;
}

.pet-card:active .pet-image {
  transform: scale(0.95);
}

.pet-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.default-pet-icon {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFF5E6;
}

.pet-icon {
  font-size: 70rpx;
  color: #A67C52;
}

.pet-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  overflow: hidden;
}

.info-row {
  display: flex;
  width: 100%;
}

.name-phone-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pet-name {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 300rpx;
}

.pet-breed, .pet-reason {
  font-size: 26rpx;
  color: #999;
}

.breed-reason-row {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.pet-time {
  font-size: 22rpx;
  color: #999;
  background-color: #F8F8F8;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.pet-owner {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.owner-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
  background-color: #FFF5E6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.owner-phone {
  font-weight: 500;
}

.arrow {
  display: flex;
  align-items: center;
  color: #D4B59E;
  font-size: 24rpx;
}

.pet-status mp-icon {
  margin-right: 6rpx;
}

.status-hospitalized {
  background-color: var(--error-color);
}

.status-postop {
  background-color: var(--success-color);
}

.pet-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.pet-time mp-icon {
  margin-right: 6rpx;
}

.pet-owner {
  width: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.owner-label {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-light-color);
  margin-bottom: 12rpx;
}

.owner-label mp-icon {
  margin-right: 6rpx;
}

.owner-phone {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--text-color);
}

.owner-phone mp-icon {
  margin-right: 6rpx;
}

.arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 10rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  padding: 40rpx;
  background-color: rgba(255, 245, 230, 0.3);
  border-radius: 16rpx;
  border: 1rpx dashed rgba(212, 181, 158, 0.3);
}

.empty-icon {
  margin-bottom: 30rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.empty-text {
  font-size: 32rpx;
  color: #A67C52;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

/* 待审核状态 */
.pending-approval {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 30rpx;
  height: 100%;
}

.pending-icon {
  margin-bottom: 40rpx;
}

.pending-title {
  font-size: 38rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 20rpx;
}

.pending-text {
  font-size: 30rpx;
  color: var(--text-light-color);
  margin-bottom: 50rpx;
  text-align: center;
}

.clinic-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  width: 100%;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  margin-bottom: 50rpx;
}

.clinic-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 30rpx;
  text-align: center;
  position: relative;
}

.clinic-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

.clinic-item {
  display: flex;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.item-label {
  width: 180rpx;
  font-size: 28rpx;
  color: var(--text-light-color);
  font-weight: 500;
}

.item-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.pending-subtext {
  font-size: 26rpx;
  color: var(--text-light-color);
  text-align: center;
  line-height: 1.6;
  padding: 0 30rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--primary-color);
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-light-color);
}
