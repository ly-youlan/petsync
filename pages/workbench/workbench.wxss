/* pages/workbench/workbench.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: var(--background-color);
}

/* 医院信息区域 */
.hospital-info {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx var(--shadow-color);
}

.hospital-name {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 10rpx;
}

.vet-name {
  font-size: 28rpx;
  color: var(--text-light-color);
}

/* 头部筛选和搜索区域 */
.header {
  margin-bottom: 30rpx;
}

.filters {
  display: flex;
  margin-bottom: 20rpx;
  background-color: white;
  padding: 15rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.filter {
  padding: 12rpx 24rpx;
  margin-right: 15rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: var(--text-light-color);
  background-color: var(--light-color);
  transition: all 0.3s ease;
}

.filter.active {
  background-color: var(--primary-color);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(212, 181, 158, 0.3);
}

.search-box {
  position: relative;
  margin-bottom: 20rpx;
}

.search-box input {
  background-color: white;
  padding: 20rpx 70rpx 20rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  width: 100%;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.search-icon image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}
.header input {
  border: 1rpx solid var(--primary-color);
  padding: 10rpx;
  border-radius: 10rpx;
}
.function-list {
  display: flex;
  flex-direction: column;
}
.function-list .btn {
  margin-bottom: 20rpx;
}

/* 创建按钮 */
.create-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--primary-color);
  color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(212, 181, 158, 0.3);
}

.create-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

/* 宠物记录卡片 */
.pet-records {
  margin-bottom: 30rpx;
}

.pet-card {
  display: flex;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
  position: relative;
}

.pet-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.pet-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.pet-info {
  flex: 1;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 6rpx;
}

.pet-breed {
  font-size: 26rpx;
  color: var(--text-light-color);
  margin-bottom: 10rpx;
}

.pet-status {
  display: inline-block;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-bottom: 6rpx;
}

.status-hospitalized {
  background-color: var(--warning-color);
  color: #5A3825;
}

.status-postop {
  background-color: var(--success-color);
  color: white;
}

.pet-time {
  font-size: 24rpx;
  color: #999;
}

.pet-owner {
  width: 180rpx;
  border-left: 1px solid #eee;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.owner-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.owner-phone {
  font-size: 26rpx;
  color: var(--text-color);
}

.arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.arrow image {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.3;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: var(--text-light-color);
  text-align: center;
}

/* 待审核状态 */
.pending-approval {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
}

.pending-approval image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.pending-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 20rpx;
}

.pending-text {
  font-size: 30rpx;
  color: var(--text-light-color);
  margin-bottom: 40rpx;
  text-align: center;
}

.hospital-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  width: 100%;
  box-shadow: 0 4rpx 12rpx var(--shadow-color);
  margin-bottom: 40rpx;
}

.hospital-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 20rpx;
  text-align: center;
}

.hospital-item {
  display: flex;
  margin-bottom: 15rpx;
}

.item-label {
  width: 180rpx;
  font-size: 28rpx;
  color: var(--text-light-color);
}

.item-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.pending-subtext {
  font-size: 26rpx;
  color: var(--text-light-color);
  text-align: center;
  line-height: 1.5;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--primary-color);
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-light-color);
}
