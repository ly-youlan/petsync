/* pages/workbench/workbench.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: var(--background-color);
  box-sizing: border-box;
}

/* 顶部容器 */
.header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
}

/* 医院信息区域 */
.hospital-info {
  background-color: white;
  padding: 0 24rpx;
  border-radius: 12rpx;
  flex: 1;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  display: flex;
  align-items: center;
  margin-right: 16rpx;
  height: 150rpx;
}

.hospital-info mp-icon {
  margin-right: 16rpx;
}

.hospital-text {
  flex: 1;
  overflow: hidden;
}

/* 设置按钮 */
.settings-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  width: 90rpx;
  height: 150rpx; 
  box-sizing: border-box;
}

.settings-btn text {
  font-size: 22rpx;
  color: var(--text-light-color);
  margin-top: 6rpx;
}

.hospital-name {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 10rpx;
}

.vet-name {
  font-size: 28rpx;
  color: var(--text-light-color);
}

/* 头部筛选和搜索区域 */
.header {
  margin-bottom: 20rpx;
  width: 100%;
}

.filters {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 0rpx;
  background-color: white;
  padding: 10rpx 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  width: 100%;
  box-sizing: border-box;
  height: 70rpx;
  align-items: center;
}

.filter {
  padding: 10rpx 20rpx;
  margin-right: 12rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--text-light-color);
  background-color: var(--light-color);
  transition: all 0.3s ease;
  height: 30rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter.active {
  background-color: var(--primary-color);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(212, 181, 158, 0.3);
}

.search-box {
  position: relative;
  margin-bottom: 0rpx;
  width: 100%;
}

.search-box input {
  background-color: white;
  padding: 24rpx 60rpx 24rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
}

.search-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.search-icon image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}
.header input {
  border: 1rpx solid var(--primary-color);
  padding: 10rpx;
  border-radius: 10rpx;
}
.function-list {
  display: flex;
  flex-direction: column;
}
.function-list .btn {
  margin-bottom: 20rpx;
}

/* 创建按钮 */
.create-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--primary-color);
  color: white;
  padding: 10rpx;
  border-radius: 12rpx;
  margin: 0 20rpx 20rpx 20rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(212, 181, 158, 0.3);
  transition: all 0.3s ease;
  width: calc(100% - 0rpx);
  box-sizing: border-box;
}

.create-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.create-btn mp-icon {
  margin-right: 12rpx;
}

/* 宠物记录卡片 */
.pet-records {
  margin-bottom: 16rpx;
}

.pet-card {
  display: flex;
  background-color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  position: relative;
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.pet-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 4rpx var(--shadow-color);
}

.pet-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.pet-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.pet-info {
  flex: 1;
  margin-right: 20rpx;
}

.pet-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.pet-name-row mp-icon {
  margin-right: 8rpx;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--secondary-color);
}

.pet-breed {
  font-size: 28rpx;
  color: var(--text-light-color);
  margin-bottom: 12rpx;
  margin-left: 26rpx;
}

.pet-status {
  display: flex;
  align-items: center;
  width: fit-content;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: white;
  margin-bottom: 12rpx;
}

.pet-status mp-icon {
  margin-right: 6rpx;
}

.status-hospitalized {
  background-color: var(--error-color);
}

.status-postop {
  background-color: var(--success-color);
}

.pet-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.pet-time mp-icon {
  margin-right: 6rpx;
}

.pet-owner {
  width: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.owner-label {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-light-color);
  margin-bottom: 12rpx;
}

.owner-label mp-icon {
  margin-right: 6rpx;
}

.owner-phone {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--text-color);
}

.owner-phone mp-icon {
  margin-right: 6rpx;
}

.arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 10rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: var(--text-light-color);
  text-align: center;
}

/* 待审核状态 */
.pending-approval {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
}

.pending-approval image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.pending-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 20rpx;
}

.pending-text {
  font-size: 30rpx;
  color: var(--text-light-color);
  margin-bottom: 40rpx;
  text-align: center;
}

.hospital-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  width: 100%;
  box-shadow: 0 4rpx 12rpx var(--shadow-color);
  margin-bottom: 40rpx;
}

.hospital-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--secondary-color);
  margin-bottom: 20rpx;
  text-align: center;
}

.hospital-item {
  display: flex;
  margin-bottom: 15rpx;
}

.item-label {
  width: 180rpx;
  font-size: 28rpx;
  color: var(--text-light-color);
}

.item-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.pending-subtext {
  font-size: 26rpx;
  color: var(--text-light-color);
  text-align: center;
  line-height: 1.5;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--primary-color);
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-light-color);
}
