/* pages/testTools/testTools.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #f8f5f2;
}

.header {
  margin-bottom: 30rpx;
}

.header-content {
  padding: 20rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #8B5A2B;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #A67C52;
}

.tools-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.tool-card, .result-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B5A2B;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #D4B59E;
  padding-bottom: 10rpx;
}

.card-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.tool-btn {
  background: linear-gradient(to right, #D4B59E, #8B5A2B);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.tool-btn:last-child {
  margin-bottom: 0;
}

.login-btn {
  background: linear-gradient(to right, #8B5A2B, #A67C52);
}

.tool-btn[disabled] {
  background: #ccc;
  color: #999;
}

.result-content {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  white-space: pre-wrap;
  word-break: break-all;
  max-height: 400rpx;
  overflow-y: auto;
}

.footer {
  margin-top: 40rpx;
  padding: 20rpx 0;
}

.back-btn {
  background-color: #D4B59E;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
}
