/* pages/ownerPetDetail/ownerPetDetail.wxss */
.container {
  padding: 30rpx;
  background-color: #f9f5f1;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #D4B59E;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 宠物信息 */
.pet-header {
  background-color: white;
  padding: 34rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  box-shadow: 0 6rpx 16rpx rgba(209, 172, 143, 0.15);
  position: relative;
  border-left: 6rpx solid #D4B59E;
  overflow: hidden;
  transition: all 0.3s ease;
}

.pet-avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 28rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.pet-avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.default-pet-icon {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #D4B59E, #8B5A2B);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.pet-info {
  flex: 1;
}

.info-row {
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.pet-name {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
  letter-spacing: 0.5rpx;
}

.pet-status {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f9f5f1;
  color: #8B5A2B;
}

.status-hospitalized {
  background-color: #f3e9df;
  color: #8B5A2B;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.pet-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f3e9df;
  color: #8B5A2B;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  margin-bottom: 8rpx;
}

.item-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.item-value {
  font-size: 28rpx;
  color: #333;
  max-width: 400rpx;
  word-break: break-all;
}

.time-value {
  font-size: 26rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.btn-share {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #D4B59E, #8B5A2B);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(139, 90, 43, 0.3);
  transition: all 0.3s;
}

.btn-share:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(139, 90, 43, 0.3);
}

.icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 记录列表 */
.section-title {
  display: flex;
  align-items: center;
  margin: 40rpx 0 24rpx;
  position: relative;
  justify-content: left;
}

.title-text {
  font-size: 34rpx;
  font-weight: bold;
  color: #8B5A2B;
  padding-right: 20rpx;
  position: relative;
  z-index: 1;
  background: #f9f5f1;
}

.title-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(to right, #D4B59E, transparent);
  margin-left: 10rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #8B5A2B;
  border-radius: 4rpx;
}

.record-list {
  margin-bottom: 40rpx;
  width: max-content;
}

.record-item {
  background-color: white;
  padding: 28rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(209, 172, 143, 0.12);
  border-left: 4rpx solid #D4B59E;
  transition: all 0.3s ease;
}

.record-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #8B5A2B;
  opacity: 0.8;
}

.record-time {
  font-size: 26rpx;
  color: #999;
}

.record-vet {
  font-size: 26rpx;
  color: #8B5A2B;
  font-weight: 500;
  background-color: #f9f5f1;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.record-content {
  font-size: 28rpx;
  line-height: 1.7;
  color: #333;
  margin-bottom: 20rpx;
  letter-spacing: 0.3rpx;
}

.record-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
}

.record-image-item {
  width: 210rpx;
  height: 210rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.record-image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.record-image-item:active image {
  transform: scale(0.97);
}

/* 空记录状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #8B5A2B;
}

.empty-icon {
  font-size: 90rpx;
  margin-bottom: 24rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  color: #8B5A2B;
}

.empty-subtext {
  font-size: 26rpx;
  color: #D4B59E;
  text-align: center;
  max-width: 80%;
}

/* 返回按钮 */
.back-button {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #D4B59E, #8B5A2B);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(209, 172, 143, 0.3);
  z-index: 100;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.95);
  box-shadow: 0 3rpx 10rpx rgba(209, 172, 143, 0.2);
}

.back-icon {
  font-size: 54rpx;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
