/* pages/ownerPetDetail/ownerPetDetail.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #36cfc9;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 宠物信息 */
.pet-header {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  display: flex;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  position: relative;
  border-left: 8rpx solid #ff9c6e;
  overflow: hidden;
}

.pet-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.pet-avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.default-pet-icon {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #ffcdb2, #ffb4a2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.pet-info {
  flex: 1;
}

.info-row {
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.pet-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.pet-status {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f6ffed;
  color: #52c41a;
}

.status-hospitalized {
  background-color: #e6f7ff;
  color: #1890ff;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.pet-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background-color: #fff7e6;
  color: #fa8c16;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  margin-bottom: 8rpx;
}

.item-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.item-value {
  font-size: 28rpx;
  color: #333;
  max-width: 400rpx;
  word-break: break-all;
}

.time-value {
  font-size: 26rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.btn-share {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #ff9c6e, #ff7875);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(255, 120, 117, 0.3);
  transition: all 0.3s;
}

.btn-share:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 120, 117, 0.3);
}

.icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 记录列表 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #ff9c6e;
  border-radius: 4rpx;
}

.record-list {
  margin-bottom: 30rpx;
}

.record-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.record-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.record-time {
  font-size: 26rpx;
  color: #999;
}

.record-vet {
  font-size: 26rpx;
  color: #36cfc9;
  font-weight: 500;
}

.record-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.record-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
}

.record-image-item {
  width: calc((100% - 48rpx) / 3);
  height: 180rpx;
  margin: 0 8rpx 16rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.record-image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 空记录状态 */
.empty-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 返回按钮 */
.back-button {
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #36cfc9, #22a39f);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(54, 207, 201, 0.3);
  z-index: 10;
}

.back-icon {
  font-size: 48rpx;
  color: white;
}
