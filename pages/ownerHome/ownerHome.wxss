/* pages/ownerHome/ownerHome.wxss */
.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
}

/* 头部区域 */
.header {
  background: linear-gradient(135deg, #36cfc9, #22a39f);
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.avatar-text {
  font-size: 48rpx;
  color: white;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 28rpx;
  opacity: 0.8;
}

.logout-btn {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx 30rpx;
  background-color: white;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-input {
  flex: 1;
  margin: 0 16rpx;
  height: 40rpx;
  font-size: 28rpx;
}

.clear-btn {
  padding: 8rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #36cfc9;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 宠物记录列表 */
.pet-list {
  padding: 20rpx;
}

.pet-card {
  display: flex;
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  border-left: 8rpx solid #ff9c6e;
  overflow: hidden;
}

.pet-card-left {
  margin-right: 20rpx;
}

.pet-avatar, .default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.default-avatar {
  background: linear-gradient(135deg, #ffcdb2, #ffb4a2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.default-avatar-text {
  font-size: 60rpx;
}

.pet-card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pet-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.pet-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f6ffed;
  color: #52c41a;
}

.status-hospitalized {
  background-color: #e6f7ff;
  color: #1890ff;
}

.pet-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.pet-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background-color: #fff7e6;
  color: #fa8c16;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.pet-info-row {
  display: flex;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.pet-breed {
  margin-right: 16rpx;
}

.pet-reason {
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pet-clinic {
  font-size: 24rpx;
  color: #999;
}

.pet-card-right {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.arrow-right {
  font-size: 48rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  color: #ddd;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999;
  max-width: 80%;
}
