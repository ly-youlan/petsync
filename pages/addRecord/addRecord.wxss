/* pages/addRecord/addRecord.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 宠物信息 */
.pet-info {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.pet-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
  color: #333;
}

.pet-breed {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.pet-status {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status-hospitalized {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-postop {
  background-color: #f6ffed;
  color: #52c41a;
}

/* 记录表单 */
.record-form {
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.content-textarea {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.upload-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 210rpx;
  height: 210rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 44rpx;
  height: 44rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 8rpx;
}

.add-image {
  border: 1rpx dashed #d9d9d9;
  background-color: #fafafa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
}

/* 提交按钮 */
.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-cancel, .btn-submit {
  flex: 1;
  margin: 0 15rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e8e8e8;
}

.btn-submit {
  background-color: var(--primary-color);
  color: white;
}
