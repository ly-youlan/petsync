/* pages/createPetRecord/createPetRecord.wxss */
:root {
  --primary-color: #D4B59E;
  --secondary-color: #A67C52;
  --light-color: #FFF5E6;
  --text-color: #333333;
  --border-color: #EAEAEA;
  --card-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.container {
  padding: 30rpx;
  background-color: #F8F8F8;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: var(--card-shadow);
  margin-bottom: 30rpx;
  overflow: hidden;
}

.card-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
  background-color: var(--light-color);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--secondary-color);
}

.card-content {
  padding: 30rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 12rpx;
  display: block;
}

.form-hint {
  font-size: 24rpx;
  color: #999999;
  font-weight: normal;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #FAFAFA;
}

.form-input:focus {
  border-color: var(--primary-color);
  background-color: white;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #FAFAFA;
}

.form-textarea:focus {
  border-color: var(--primary-color);
  background-color: white;
}



/* 标签样式 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background-color: var(--light-color);
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: var(--secondary-color);
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.tag.selected {
  background-color: var(--primary-color);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(212, 181, 158, 0.3);
}

.custom-tag {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #EEEEEE;
}

.custom-tag-input {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  margin-bottom: 30rpx;
}

.custom-tag-input input {
  flex: 1;
  margin-right: 16rpx;
}

.add-tag-btn {
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: var(--primary-color);
  color: white;
  border-radius: 12rpx;
}

.selected-tags {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #FAFAFA;
  border-radius: 12rpx;
}

.selected-tags-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.selected-tags-container {
  display: flex;
  flex-wrap: wrap;
}

.selected-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background-color: var(--primary-color);
  color: white;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.remove-tag {
  margin-left: 10rpx;
  font-size: 30rpx;
}

/* 图片上传 */
.image-uploader {
  margin-top: 16rpx;
}

.upload-btn {
  width: 180rpx;
  height: 180rpx;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border: 1rpx dashed #DDDDDD;
}

.upload-icon {
  font-size: 48rpx;
  color: #BBBBBB;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #999999;
}

.image-preview-scroll {
  width: 100%;
  white-space: nowrap;
  margin-top: 20rpx;
}

.image-preview-container {
  display: inline-flex;
}

.image-preview-item {
  position: relative;
  margin-right: 20rpx;
  display: inline-block;
}

.image-preview {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.image-delete {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: var(--primary-color);
  color: white;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 6rpx 16rpx rgba(212, 181, 158, 0.3);
  font-weight: bold;
}
